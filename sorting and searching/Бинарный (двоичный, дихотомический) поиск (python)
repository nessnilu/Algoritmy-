def binary_search(arr, target):
    left = 0
    right = len(arr) - 1
    
    while left <= right:
        mid = (left + right) // 2  # Находим средний индекс
        
        if arr[mid] == target:
            return mid  # Элемент найден
        elif arr[mid] < target:
            left = mid + 1  # Искомый элемент в правой половине
        else:
            right = mid - 1  # Искомый элемент в левой половине
    
    return -1  # Элемент не найден

if __name__ == "__main__":
    # Массив должен быть отсортирован для бинарного поиска
    arr = [2, 5, 8, 12, 16, 23, 38, 45, 67, 89]
    target = 23
    
    print("Отсортированный массив:", arr)
    
    result = binary_search(arr, target)
    
    if result != -1:
        print(f"Элемент {target} найден по индексу: {result}")
    else:
        print(f"Элемент {target} не найден в массиве")
