def shell_sort(arr):
    n = len(arr)
    
    # Начинаем с большого шага, затем уменьшаем его
    gap = n // 2
    while gap > 0:
        # Применяем сортировку вставками для этого шага
        for i in range(gap, n):
            temp = arr[i]  # Сохраняем текущий элемент
            j = i
            
            # Сдвигаем элементы, пока не найдем правильную позицию для temp
            while j >= gap and arr[j - gap] > temp:
                arr[j] = arr[j - gap]
                j -= gap
            
            # Вставляем temp на правильную позицию
            arr[j] = temp
        
        # Уменьшаем шаг
        gap //= 2

if __name__ == "__main__":
    arr = [12, 34, 54, 2, 3, 8, 23, 15]
    
    print("Исходный массив:", arr)
    
    shell_sort(arr)
    
    print("Отсортированный массив:", arr)
